<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddSubcategory">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />




                <Spinner
                    android:id="@+id/categoryspinner_new"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize ="16sp"
                    android:layout_height="50dp"/>


                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    android:id="@+id/headersub1"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_margin="5dp"
                                android:id="@+id/subcategoryImg_new"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_image_black_24dp"
                                />
                            <Button
                                android:id="@+id/subaddcategoryimage_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Image"
                                android:fontFamily="@font/roboto_light"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/subcat1head"
                                android:padding="10dp"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sub Category"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/roboto_light"
                                android:textSize="16dp"></TextView>
                            <View
                                android:id="@+id/subcat1headview"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Gray"></View>

                            <EditText
                                android:padding="15dp"
                                android:id="@+id/subcatvalue1_new"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFF"
                                android:textColor="@color/black"
                                android:hint="Enter your new sub category"
                                android:fontFamily="@font/roboto_light"
                                android:textColorHint="@color/Gray"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:singleLine="true"
                                android:maxLength="60"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/savesubcategory_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAVE SUB CATEGORY"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>